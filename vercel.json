{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/admin-api/:path*",
      "destination": "/api/admin-proxy/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "https://newspulse-backend-real.onrender.com/api/:path*"
    },
    {
      "source": "/admin/:path*",
      "destination": "https://newspulse-backend-real.onrender.com/api/admin/:path*"
    },
    {
      "source": "/settings/public",
      "destination": "https://newspulse-backend-real.onrender.com/api/settings/public"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
