# --- Auth System (Next.js) ---
APP_URL=https://newspulse.co.in
AUTH_COOKIE_DOMAIN=newspulse.co.in

# JWT Secrets (use 64+ random bytes in production)
JWT_ACCESS_SECRET=replace_me_strong_64b
JWT_REFRESH_SECRET=replace_me_strong_64b
ACCESS_TOKEN_TTL_MIN=15
REFRESH_TOKEN_TTL_DAYS=14

# Database (Mongo via Prisma)
DATABASE_URL="mongodb+srv://user:password@cluster.example.mongodb.net/newspulse?retryWrites=true&w=majority"

# Rate Limiting
RL_WINDOW_MS=60000
RL_MAX=10
REDIS_URL=redis://localhost:6379

# Passkey / WebAuthn origins
WEBAUTHN_RP_ID=newspulse.co.in
WEBAUTHN_RP_NAME=NewsPulse
WEBAUTHN_ORIGIN=https://newspulse.co.in

# Optional demo / dev flags
AUTH_DEMO_MODE=false
AUTH_ENABLE_CONSOLE_LOGS=true

#  .env.example

# Frontend configs (safe to expose in build)
VITE_USE_MOCK=true

# =============================
# Media upload (admin article cover images)
# =============================
# When disabled, the Upload tab is visible but locked.
VITE_MEDIA_UPLOAD_ENABLED=false
VITE_MEDIA_UPLOAD_ENDPOINT=/media/upload

# =============================
# Admin API: ONE contract
# =============================
# Preferred mode (matches Vercel): proxy
# - Leave VITE_ADMIN_API_ORIGIN empty
# - All frontend calls go to: /admin-api/api/*
# - Vite dev proxy forwards /admin-api/* to your backend
# - Vercel serverless proxy forwards /admin-api/* to ADMIN_BACKEND_URL

# Direct mode (optional): set your backend origin (NO trailing /api)
# Examples:
# VITE_ADMIN_API_ORIGIN=http://localhost:5000
# VITE_ADMIN_API_ORIGIN=https://<your-render-backend>.onrender.com
VITE_ADMIN_API_ORIGIN=

# Proxy base path used by the frontend when origin is not set
VITE_ADMIN_API_PROXY_BASE=/admin-api

# Legacy / back-compat (optional; avoid using in new code)
# VITE_API_URL=
# VITE_API_BASE_URL=
# VITE_BACKEND_URL=

# KiranOS frontend config
VITE_KIRANOS_API_BASE=http://localhost:5050
VITE_FOUNDER_API_KEY=KIRANOS-FOUNDER-SECRET-CHANGE-ME

# Backend-only (set in hosting env; do not commit real values)
FOUNDER_ID=FOUND-001
FOUNDER_EMAIL=founder@newspulse.co.in
FOUNDER_PASSWORD=ChangeMe_Strong!
FOUNDER_PIN_SALT=please-change

